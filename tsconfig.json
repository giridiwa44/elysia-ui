{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx":"react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}